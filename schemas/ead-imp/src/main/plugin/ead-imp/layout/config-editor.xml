	<views>
		<view name="default">
			<tab id="default" default="true" mode="flat">
				<section>
					<field name="planTitle" xpath="/ead:archdesc/ead:did/ead:unittitle"
						or="unittitle" in="/ead:archdesc/ead:did" del="." removable="false" />
					<field name="planAbstract" xpath="/ead:archdesc/ead:did/ead:abstract"
						or="abstract" in="/ead:archdesc/ead:did" del="." removable="false" />
				</section>
