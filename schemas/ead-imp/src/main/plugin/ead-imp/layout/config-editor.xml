<editor xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:ead="http://ead3.archivists.org/schema/" xmlns:gn="http://www.fao.org/geonetwork"
	xsi:noNamespaceSchemaLocation="../../../../../../config-editor.xsd">
	<!-- Define form field types per metadata element. -->
	<fields>
		<for name="ead:unittitle" use="textarea" />
		<for name="ead:abstract" use="textarea" />
	    <for name="ead:c" addDirective="data-gn-directory-entry-selector">
	      <directiveAttributes
	        data-template-add-action="true"
	        data-search-action="true"
	        data-popup-action="true"
	        data-template-type="c"/>
	    </for>
	</fields>
	<!-- Complex fields. -->
	<fieldsWithFieldset>
		<name>ead:ead</name>
		<name>ead:archdesc</name>
		<name>ead:dsc</name>
		<name>ead:did</name>
		<name>ead:c</name>
	</fieldsWithFieldset>
	<multilingualFields>
		<exclude>ead:unitid</exclude>
		<exclude>ead:unittitle</exclude>
		<exclude>ead:abstract</exclude>
	</multilingualFields>
